<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    //CATERINA GIANNECCHINI 2019/8106 GRUPO 4
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="65dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lf"
            android:layout_width="match_parent"
            android:layout_height="739dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/uno"
                android:clickable="true"
                android:gravity="center"
                android:onClick="clickTextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/dos"
                android:clickable="true"
                android:gravity="center"
                android:onClick="clickTextView"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/tres"
                android:clickable="true"
                android:gravity="center"
                android:onClick="clickTextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/cuatro"
                android:clickable="true"
                android:gravity="center"
                android:onClick="clickTextView"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/cinco"
                android:clickable="true"
                android:gravity="center"
                android:onClick="clickTextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/itlalogo"
                    tools:ignore="MissingConstraints,MissingPrefix"
                    tools:layout_editor_absoluteX="146dp"
                    tools:layout_editor_absoluteY="430dp" />

                <EditText
                    android:id="@+id/txtInput"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:hint="Ingrese un valor"
                    android:inputType="number"
                    android:padding="25dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt100"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text50"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text20"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="◀--------BORRAR--------"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:text="--------CERRAR--------➤"
                android:textColor="@color/white"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>